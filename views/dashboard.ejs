<!DOCTYPE html>
<html lang="en">

<head>

	<title>Vibey Dashboard</title>
	<%- include('./partials/head') %>
	<link rel="stylesheet" href="/css/dashboard.css">
</head>

<body>
		<%- include('./partials/navbar') %>
	<div class="d-flex container-fluid" id="wrapper">

		<!-- Sidebar -->
		<!-- /#sidebar-wrapper -->

		<!-- Page Content -->

			<div class="">
				<% if (isAllowed) { %>
				<!-- Main Content -->
				<h1>Dashboard</h1>
				<!-- <div id="song-stats" class="vibey-card p-3 m-2">
					<h3>Stats</h3>
				</div> -->
				<div class="card-deck p-3">
					<div class="bot-status vibey-card p-3 m-2">
						<h3>Bot Status</h3>
						<% if(botConnected) { %>
							<div id="connected">
								<img src="/img/undraw_joyride_hnno.svg" width="200px" height="200px" alt="Sad face">
								<p style="font-size: 20px;" >Vibey is connected to your chat :D</p>
                <a id="disconnect-btn" class="btn btn-danger" href="/api/disconnect/<%= loggedInUser %>" >Disconnect Vibey</a>
							</div>
						
						<% } else { %>
						<div id="not-connected">
							<img src="/img/undraw_feeling_blue_4b7q.svg" width="200px" height="200px" alt="Sad face">
							<p style="font-size: 20px;" >Vibey is not connected to your chat :(</p>
              <a id="connect-btn" class="btn btn-info" href="/api/connect/<%= loggedInUser %>" >Connect Vibey</a>
						</div>
						<% } %> 
					</div>
          <div class="bot-status vibey-card dark-bg p-3 m-2 float-left">
            <% if (!ppConnected) { %>
            <h3>Connect to Paypal</h3>
            <form method="post" action="/api/connect-paypal">
              <div class="form-group">
                <label for="ppemailinput">Email</label>
                <input type="email" id="ppemailinput" name="email">
              </div>
              <button type="submit" class="btn btn-primary">Connect</button></button>
            </form>
            <% } else { %>
            <div class="text-center">
              <h3 style="text-align: center;">Connected to PayPal!</h3>
              <p><%= ppEmail %></p>
              <a class="btn btn-danger" href="/api/disconnect-paypal">Disconnect</a>
            </div>
            <% } %>
        </div>
				
				<% } else { %>
					<%- include('./partials/noAccess') %>
				<% } %>
			</div>
			<!-- /#page-content-wrapper -->


			<div id="pageInfo" data-channel="<%= channel %>" data-loggedIn="<%= loggedInUser %>" data-enviroment="<%= enviroment %>"></div>
			<!-- /#wrapper -->

			<!-- Menu Toggle Script -->

			<script src="/js/sidebar.js"></script>
      <script src="/vendor/jquery/jquery-3.5.1.min.js" type="text/javascript"></script>
			<% if (isAllowed) { %>
      		<script src="https://cdn.jsdelivr.net/npm/gsap"></script>
			<script src="/js/moment.min.js"></script>
			<script src="/socket.io/socket.io.js"></script>
			<script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
			<script src="/js/dashboard.min.js"></script>
			<% } %>
</body>

</html>
