<html lang="en">

<head>
	<title>Vibey Requests</title>
	<%- include('./partials/head') %>
	<link rel="stylesheet" href="/css/queue.css">
</head>

<body>

		<!-- Sidebar -->
    <%- include('./partials/navbar') %>
		<!-- /#sidebar-wrapper -->

		<!-- Page Content -->
		<div id="page-content-wrapper">

				<% if (isAllowed) { %>
